@using ApiProj.Models;
@model List<Cliente>;
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container">
    <h1 class="text-center">Lista de Clientes</h1>

    <table class="table table-dark text-center my-3">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">DDD</th>
                <th scope="col">Fone</th>
                <th scope="col">Cpf / Cnpj</th>
                <th scope="col" class="text-danger">Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Nome</td>
                        <td>@item.DDD</td>
                        <td>@item.Fone</td>
                        <td>@item.CNPJouCpf</td>
                        <td>
                            <form asp-action="DeleteCliente" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <a class="btn btn-teal" asp-action="AdicionarCliente">Adicionar Novo Cliente</a>
</div>
