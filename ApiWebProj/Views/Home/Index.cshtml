@{
    ViewData["Title"] = "Home";
}

<head>
    <script src="~/js/PesquisaCliente.js" type="text/javascript"></script>
</head>

<h1 class="text-center">Buscar Cliente</h1>
<p class="text-center">Informe o Telefone OU CNPJ do cliente:</p>

<div class="container">
    <form class="mt-5">
        <div class="form-row align-items-center">
            <div class="col-2 my-2 offset-2">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">DDD</div>
                    </div>
                    <input type="number" class="form-control" id="ddd" placeholder="14" min="1" max="99">
                </div>
            </div>
            <div class="col-6 my-2">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">Fone</div>
                    </div>
                    <input type="text" class="form-control" id="fone" placeholder="Somente Números!" required pattern="[0-9]{9}" maxlength="9">
                </div>
            </div>
        </div>

        <div class="form-row align-items-center">
            <div class="col-8 my-2 offset-2">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">CNPJ</div>
                    </div>
                    <input type="text" class="form-control" id="cp" placeholder="Somente Números!" pattern="([0-9]{11})|([0-9]{14})" required minlength="11" maxlength="14">
                </div>
            </div>
        </div>

        <div class="form-row align-items-center">
            <button id="pesquisarBtn" type="submit" class="btn btn-teal col-8 my-3 offset-2">Buscar</button>
        </div>
    </form>
</div>

<h1 class="text-center" id="message"></h1>
<div class="container" id="resultado">

    <table class="table table-dark text-center my-3">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">DDD</th>
                <th scope="col">Fone</th>
                <th scope="col">Cpf / Cnpj</th>
            </tr>
        </thead>
        <tbody id="cliente">
        </tbody>
    </table>
</div>

<div class="processandoMensagem">
    <div class="loader"></div>
</div>
